<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project pondero-libs">

	<target name="create_run_jar">
		<jar destfile="${pkgdir}/bin/pondero-libs.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="pondero.PonderoLibs" />
				<attribute name="Class-Path" value="." />
				<attribute name="Pondero-Artifact-Type" value="APPLICATION" />
				<attribute name="Pondero-Artifact-Id" value="PONDERO-LIBS" />
				<attribute name="Pondero-Artifact-Major" value="0" />
				<attribute name="Pondero-Artifact-Minor" value="3" />
				<attribute name="Pondero-Artifact-Maturity" value="alpha" />
			</manifest>
			<fileset dir="${soldir}/pondero-libs/target/classes" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/commons-io/commons-io/2.4/commons-io-2.4.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/org/apache/poi/poi/3.10-FINAL/poi-3.10-FINAL.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/commons-codec/commons-codec/1.5/commons-codec-1.5.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/org/apache/poi/poi-ooxml/3.10-FINAL/poi-ooxml-3.10-FINAL.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/org/apache/poi/poi-ooxml-schemas/3.10-FINAL/poi-ooxml-schemas-3.10-FINAL.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/org/apache/xmlbeans/xmlbeans/2.3.0/xmlbeans-2.3.0.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/stax/stax-api/1.0.1/stax-api-1.0.1.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/dom4j/dom4j/1.6.1/dom4j-1.6.1.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/xml-apis/xml-apis/1.0.b2/xml-apis-1.0.b2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/com/famfamfam/silk/1.3/silk-1.3.jar" />
			<zipfileset excludes="META-INF/*.SF" src="${mavendir}/com/toedter/jcalendar/1.4/jcalendar-1.4.jar" />
		</jar>
	</target>

</project>
